<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingTop="5dp"
    android:paddingRight="20dp"
    android:paddingBottom="5dp"
    tools:context=".AvatarSettings">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"

            android:background="@drawable/image_button_background"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Sammel sie alle !"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle=""></TextView>


        <ImageView
            android:id="@+id/imageViewPreview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
           android:padding="5dp"
            android:layout_weight="6"
            android:scaleType="fitCenter" />

        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButtonSkin1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/image_button_background"
                        android:scaleType="fitCenter"
                        android:src="@drawable/skin1" />

                    <ImageButton
                        android:id="@+id/imageButtonSkin2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha=".6"
                        android:background="@drawable/image_button_background"
                        android:scaleType="fitCenter"
                        android:src="@drawable/skin2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButtonSkin3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha=".6"
                        android:background="@drawable/image_button_background"
                        android:scaleType="fitCenter"
                        android:src="@drawable/skin3" />

                    <ImageButton
                        android:id="@+id/imageButtonSkin4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha=".6"
                        android:background="@drawable/image_button_background"
                        android:scaleType="fitCenter"
                        android:src="@drawable/skin4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButtonSkin5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha=".6"
                        android:background="@drawable/image_button_background"
                        android:scaleType="fitCenter"
                        android:src="@drawable/skin5" />

                    <ImageButton
                        android:id="@+id/imageButtonSkin6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:alpha=".6"
                        android:background="@drawable/image_button_background"
                        android:scaleType="fitCenter"
                        android:src="@drawable/skin6" />
                </LinearLayout>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>